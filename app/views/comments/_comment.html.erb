<div id="comment_<%=comment.id%>">
  <h3><%= comment.body %></h3>
  <%= image_tag comment.image %>
  <br>
  <div class="control-panel">
    <% if comment.user == current_user || current_user&.admin? || current_user&.moderator? %>
      <%= link_to "Edit Comment", edit_topic_post_comment_path(comment.post.topic,comment.post,comment), remote: true %>
      <br>
      <%= link_to "Delete Comment", topic_post_comment_path(comment.post.topic,comment.post,comment), method: :delete, data: { confirm: "Delete?" },remote: true %>
    <% end %>
      <br>
      <%= link_to "Like", upvote_path(comment_id: comment.id), method: :post, remote: true %>
      <br>
      <%= link_to "Dislike", downvote_path(comment_id: comment.id), method: :post, remote: true %>
      <br>
      <span> LIKES <%= comment.total_likes%>!</span>
      <br>
      <span> DISLIKES <%= comment.total_dislikes%>!</span>
  </div>
</div>

