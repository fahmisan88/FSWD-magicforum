<%= form_for(@user, url: users_path, html: { id: "users-create-form" }) do |f| %>

<h1 class="text-center">
  Create Account
</h1>

<div class="form-group">
    <h4 class="text-center"> Upload Profile Picture </h4>
    <div id="preview-image">
      <% if @user.image? %>
        <%= image_tag @user.image, class: "img-settings img-responsive center-block" %>
      <% end %>
    </div>
  </div>

<div class="form-group">
  <%= f.file_field :image, id: "post_image_field", class: 'form-control image-uploader' %>
</div>


  <div class="form-group">
    <h4> <%= f.label :email_field, "Email" %> </h4>
    <%= f.text_field :email, required: true, id: "User_email_field", class: 'form-control' %>
  </div>

  <div class="form-group">
    <h4> <%= f.label :password_field, "Password" %> </h4>
    <%= f.password_field :password, id: "user_password_field", class: 'form-control' %>
  </div>

  <div class="form-group">
    <h4> <%= f.label :string_field, "Username" %> </h4>
    <%= f.text_field :username, id: "user_username_field", class: 'form-control' %>
  </div>

  <div class="form-group text-center">
    <%= f.submit "Register", class: "btn btn-success btn-lg" %>
  </div>
<% end %>
