<%= form_for(@user, url: user_path, html: { id: "users-create-form" }) do |f| %>

<h1 class="text-center">
  Edit Account
</h1>

<div class="form-group">
    <h4 class="text-center"> Upload Profile Picture </h4>
    <div id="preview-image">
      <% if @user.image? %>
        <%= image_tag @user.image, class: "img-settings img-responsive center-block" %>
      <% end %>
    </div>
  </div>

<div class="form-group">
  <%= f.file_field :image, id: "user_image_field", class: 'form-control image-uploader' %>
</div>


  <div class="form-group">
    <h4> <%= f.label :password_field, "Password" %> </h4>
    <%= f.password_field :password, id: "user_password_field", class: 'form-control' %>
  </div>

  <div class="form-group">
    <h4> <%= f.label :password_confirmation_field, "Password Confirmation" %> </h4>
    <%= f.password_field :password_confirmation, id: "user_password_field", class: 'form-control' %>
  </div>


  <div class="form-group text-center">
    <%= f.submit "Edit Profile", class: "btn btn-success btn-lg" %>
  </div>
<% end %>
